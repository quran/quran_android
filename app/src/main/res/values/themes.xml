<?xml version="1.0" encoding="utf-8"?>
<resources>

  <style name="Quran" parent="Theme.AppCompat">
    <item name="colorAccent">@color/accent_color</item>
    <item name="spinnerStyle">?attr/actionDropDownStyle</item>
    <item name="spinnerDropDownItemStyle">@style/SherlockDropDownItem</item>
    <item name="spinnerItemStyle">@style/SherlockSpinnerItem</item>
  </style>

  <style name="QuranToolBar" parent="Theme.AppCompat.DayNight.NoActionBar">
    <item name="android:windowBackground">@color/surface</item>
    <item name="colorAccent">@color/accent_color</item>
    <item name="windowActionModeOverlay">true</item>
    <item name="spinnerStyle">?attr/actionDropDownStyle</item>
    <item name="spinnerDropDownItemStyle">@style/SherlockDropDownItem</item>
    <item name="spinnerItemStyle">@style/SherlockSpinnerItem</item>
  </style>

  <style name="QuranToolBarDayNight" parent="Theme.AppCompat.DayNight.NoActionBar">
    <item name="android:windowBackground">@color/surface</item>
    <item name="actionModeBackground">@color/toolbar</item>
    <item name="colorAccent">@color/accent_color</item>
    <item name="colorPrimary">@color/toolbar</item>
    <item name="iconTint">@color/icon_tint</item>
    <item name="windowActionModeOverlay">true</item>
    <item name="spinnerStyle">?attr/actionDropDownStyle</item>
    <item name="spinnerDropDownItemStyle">@style/SherlockDropDownItem</item>
    <item name="spinnerItemStyle">@style/SherlockSpinnerItem</item>
  </style>

  <style name="QuranToolBarActionButton" parent="Widget.AppCompat.ActionButton">
    <item name="android:tint">@color/icon_tint</item>
  </style>

  <style name="QuranToolBar.Overlay">
    <item name="windowActionBarOverlay">true</item>
    <item name="android:statusBarColor">@color/toolbar</item>
    <item name="android:navigationBarColor">@color/toolbar</item>
    <item name="actionButtonStyle">@style/QuranToolBarActionButton</item>
    <item name="actionModeCloseButtonStyle">@style/QuranToolBarActionButton</item>
  </style>

    <style name="QuranDialog" parent="Theme.AppCompat.DayNight.Dialog" />
</resources>
