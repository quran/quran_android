<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="NotificationText">
      <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>
    
    <style name="NotificationTitle">
      <item name="android:textColor">?android:attr/textColorPrimary</item>
      <item name="android:textStyle">bold</item>
    </style>

    <style name="translation_sura_title">
        <item name="android:textColor">@color/translation_hdr_color</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TranslationText">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TranslationText.Highlighted">
        <item name="android:textColor">@color/translation_highlight</item>
    </style>

    <style name="QuranAndroid" parent="Theme.AppCompat" />
    <style name="QuranAndroid.Transparent">
        <item name="windowActionBarOverlay">true</item>
    </style>

    <style name="TranslationText.NightMode">
        <item name="android:background">@android:color/black</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="TranslationText.NightMode.Highlighted">
        <item name="android:textColor">@color/translation_highlight</item>
    </style>

    <style name="SearchResult">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="SearchResult.Location">
        <item name="android:textColor">#aaaaaa</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="PanelLabel">
        <item name="android:textColor">@color/translation_highlight</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>
